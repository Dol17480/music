<h1>Albums</h1>

<form action="/albums" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name">
  <label for="artist_id">
  <select name="artist_id">
  <% for artist in @artists %>
  <option value="<%= artist.id %>"><%= artist.name %></option>
  <% end %>
  </select>
  <input type='submit' value="Add album">
</form>